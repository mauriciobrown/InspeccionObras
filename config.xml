<?xml version='1.0' encoding='utf-8'?>
<widget id="com.appcorp.geoFotoWork" version="1.0.0"
    xmlns="http://www.w3.org/ns/widgets"
    xmlns:cdv="http://cordova.apache.org/ns/1.0">

    <name>GeoFotoWork</name>
    <description>Aplicación de registro fotográfico con GPS y autenticación biométrica</description>
    <author email="dev@appcorp.com" href="https://appcorp.com">
        Equipo GeoFotoWork
    </author>

    <!-- Página inicial -->
    <content src="index.html" />

    <!-- Permitir navegación externa -->
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />

    <!-- Preferencias comunes -->
    <preference name="Fullscreen" value="true" />
    <preference name="Orientation" value="portrait" />
    <preference name="AndroidPersistentFileLocation" value="Internal" />

    <!-- Plugins requeridos -->
    <plugin name="cordova-plugin-camera" spec="^6.0.0" />
    <plugin name="cordova-plugin-geolocation" spec="^5.0.0" />
    <plugin name="cordova-plugin-fingerprint-aio" spec="^5.0.0" />

    <!-- Nota:
         Los permisos (CAMERA, LOCATION, BIOMETRIC, STORAGE, etc.)
         ya están declarados en AndroidManifest.xml.
         No se deben poner aquí para evitar errores de compilación.
    -->
</widget>
